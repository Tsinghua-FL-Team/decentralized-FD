Bootstrap: docker
From: pytorch/pytorch:1.1.0-cuda10.0-cudnn7.5-runtime

%files
    # Copy source code and respective runners
    ../src/   /opt/run_code/src
    ../run_experiment_alvis.py /opt/run_code/
